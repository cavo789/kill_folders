{
  "name": "avonture_christophe/kill_folders",
  "description": "Very fast way to remove every files in a folder (subfolders included)",
  "type": "project",
  "license": "MIT",
  "authors": [
    {
      "name": "Christophe Avonture",
      "email": "cavo789@yahoo.com"
    }
  ],
  "require": {},
  "require-dev": {
    "phpunit/phpunit": "^5.7|^7.0",
    "friendsofphp/php-cs-fixer": "^2.9"
  },
  "scripts": {
    "cghooks": "C:/Users/Avonture_christophe/AppData/Roaming/Composer/vendor/bin/cghooks"
  },
  "extra": {
    "hooks": {
      "pre-commit": [
        "echo committing as $(git config user.name)",
        "php-cs-fixer fix ."
      ],
      "pre-push": [
        "php-cs-fixer fix . --config C:/Christophe/Repository/phpmenu/.php-cs"
      ],
      "post-merge": "composer install"
    }
  }
}
